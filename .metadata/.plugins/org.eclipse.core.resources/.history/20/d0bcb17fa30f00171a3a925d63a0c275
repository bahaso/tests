package bahaso.testing.androidElement;

import java.util.ArrayList;

import org.openqa.selenium.WebElement;

import io.appium.java_client.android.AndroidDriver;

public class ChooseCourse {
	AndroidDriver driver;
	
	public ChooseCourse(AndroidDriver driver){
		this.driver = driver;
	}
	
	public ArrayList<WebElement> getTabCourse(){
		String DESTINATION_ELEMENT_TEXT= "KUBO";
		return driver.findElementByAndroidUIAutomator("new UiScrollable(new UiSelector()).scrollIntoView(new UiSelector().text(DESTINATION_ELEMENT_TEXT))");
		//return (ArrayList<WebElement>) driver.findElementsById("com.bahaso:id/txtLessonItem");
	}
}
