package bahaso.testing.android;

import org.testng.annotations.AfterMethod;
import org.testng.annotations.BeforeMethod;
import org.testng.annotations.Test;

import bahaso.testing.androidElement.Register;
import bahaso.testing.androidElement.SplashScreen;
import bahaso.testing.general.mobileGeneral;

public class Register_test extends mobileGeneral{
	SplashScreen splashScreen;
	Register register;
	
	@BeforeMethod
	public void beforeMethod(){
		startEngine();
		splashScreen = new SplashScreen(driver);
		splashScreen.Sign_Up_Button.click();
		try {
			Thread.sleep(4000);
		} catch (InterruptedException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
	}
	
	@Test
	public void firstname_fail(){
		action.press(splashScreen.getFBLoginButton(), 0, 0).release().perform();
		try {
			Thread.sleep(4000);
		} catch (InterruptedException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
	}
	
	@AfterMethod
	public void afterMethod(){
		driver.quit();
	}
}
