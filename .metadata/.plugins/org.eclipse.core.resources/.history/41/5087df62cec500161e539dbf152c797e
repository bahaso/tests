package bahaso.testing.webElement;

import java.util.ArrayList;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.interactions.Actions;

public class BoxMatchDialog extends ExcercisePage{
	public ArrayList<WebElement> draggable = new ArrayList<WebElement>();
	public ArrayList<WebElement> droppable = new ArrayList<WebElement>();
	Actions action = null;
	
	public BoxMatchDialog(WebDriver driver){
		this.driver = driver;
		this.action = new Actions(driver);
	}
	
	public ArrayList<WebElement> getAnswer(){
		return (ArrayList<WebElement>) driver.findElements(By.xpath("//input[@class='lesson']"));
		
	}
	
	public ArrayList<WebElement> getDraggable(){
		draggable = (ArrayList<WebElement>) driver.findElements(By.xpath("//input[@class='lesson']"));
		return draggable;
	}
	
	public ArrayList<WebElement> getDroppable(){
		droppable = (ArrayList<WebElement>) driver.findElements(By.xpath("//input[@class='lesson']"));
		return droppable;
	}
	
	//operation
	public void answerRight(String[] answer){
		for(int i=0;i<answer.length;i++){
			for(int j=0;j<getDraggable().size();j++){
				if(answer[i].equals(getAnswer().get(j).getText())){
					action.clickAndHold(getDraggable().get(j)).moveToElement(getDroppable().get(i)).release().build().perform();
				}
			}
		}
	}
	
	//operation
		public void answerWrong(String[] answer){
			int wrong = 1;
			for(int i=0;i<answer.length;i++){
				for(int j=0;j<getDraggable().size();j++){
					if(wrong>0){
						if(!answer[i].equals(getAnswer().get(j).getText())){
							action.clickAndHold(getDraggable().get(j)).moveToElement(getDroppable().get(i)).release().build().perform();
						}
					}
					if(!answer[i].equals(getAnswer().get(j).getText())){
						action.clickAndHold(getDraggable().get(j)).moveToElement(getDroppable().get(i)).release().build().perform();
					}
				}
			}
		}
}
