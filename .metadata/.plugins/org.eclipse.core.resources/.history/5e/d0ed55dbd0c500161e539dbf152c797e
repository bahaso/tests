package bahaso.testing.webElement;

import java.util.ArrayList;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.interactions.Actions;

public class BoxMatchDialog extends ExcercisePage{
	public ArrayList<WebElement> draggable = new ArrayList<WebElement>();
	public ArrayList<WebElement> droppable = new ArrayList<WebElement>();
	Actions action = null;
	
	public BoxMatchDialog(WebDriver driver){
		this.driver = driver;
		this.action = new Actions(driver);
	}
	
	public ArrayList<WebElement> getAnswer(){
		return (ArrayList<WebElement>) driver.findElements(By.xpath("//input[@class='lesson']"));
		
	}
	
	public ArrayList<WebElement> getDraggable(){
		draggable = (ArrayList<WebElement>) driver.findElements(By.xpath("//div[@class='tile-question ui-draggable ui-draggable-handle']"));
		return draggable;
	}
	
	public ArrayList<WebElement> getDroppable(){
		droppable = (ArrayList<WebElement>) driver.findElements(By.xpath("//input[@class='droppable ui-droppable']"));
		return droppable;
	}
	
	//operation
	public void answerRight(String[] answer) throws InterruptedException{
		for(int i=0;i<answer.length;i++){
			for(int j=0;j<getDraggable().size();j++){
				if(answer[i].equals(getAnswer().get(j).getText()) && !getDraggable().get(i).getAttribute("answer-id").equals("666")){
					action.clickAndHold(getDraggable().get(j)).moveToElement(getDroppable().get(i)).release().build().perform();
					Thread.sleep(2000);
				}
			}
		}
		getButtonCheck().click();
		Thread.sleep(3000);
	}
	
	//operation
		public void answerWrong(String[] answer) throws InterruptedException{
			int wrong = 1;
			for(int i=0;i<answer.length;i++){
				for(int j=0;j<getDraggable().size();j++){
					if(wrong>0){
						if(!answer[i].equals(getAnswer().get(j).getText()) && !getDraggable().get(i).getAttribute("answer-id").equals("666")){
							action.clickAndHold(getDraggable().get(j)).moveToElement(getDroppable().get(i)).release().build().perform();
							wrong = 0;
							Thread.sleep(2000);
						}
					}else{
						if(!getDraggable().get(i).getAttribute("answer-id").equals("666")){
							action.clickAndHold(getDraggable().get(j)).moveToElement(getDroppable().get(i)).release().build().perform();
							Thread.sleep(2000);
						}
					}
				}
			}
			getButtonCheck().click();
			Thread.sleep(3000);
		}
}
