        TouchAction action = new TouchAction((PerformsTouchActions)driver);
//        ArrayList<WebElement> menu = (ArrayList<WebElement>) driver.findElementsById("com.bahaso:id/btn_daftar_baru");
//        for(WebElement elem : menu){
//        	System.out.println(elem.getText());
//        }
        try {
			Thread.sleep(4000);
